<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_margin_max"
    tools:context=".start.StartActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:srcCompat="@mipmap/img_scanner_home" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin_max"
        android:layout_marginBottom="@dimen/dimen_margin_max"
        android:text="@string/string_info"
        android:textAlignment="center"
        android:textColor="@color/color_black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnScanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_button_height"
        android:text="@string/string_scanner" />

    <Button
        android:id="@+id/btnManually"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        app:strokeColor="@color/color_primary"
        android:layout_height="@dimen/dimen_button_height"
        android:text="@string/string_manually" />
</LinearLayout>